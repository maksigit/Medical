+b.SECTION.offer
  .container-main
    +e.H2.masthead Интересные предложения:
    +e.UL.hits
      each element in ["Все новинки ", "Все хиты продаж", "Лучшая цена"]
        +e.LI.item
          +e.A.link(href="#")= element
    +b.offer-wrap
      +e.container
        .row
          for name in hits
            +e.item
              +item(name)